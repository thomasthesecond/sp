<div class="TeamMember TeamMember--small" itemprop="employee" itemscope itemtype="http://schema.org/Person">
  <h5 class="TeamMember-name" itemprop="name">
    {{ teamMember.name }}
  </h5>

  <p class="TeamMember-title" itemprop="jobTitle">
    {{ teamMember.title }}
  </p>

  <p class="TeamMember-link">
    {{> "@more-link" link=teamMember.link }}
  </p>
</div>
