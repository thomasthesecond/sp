<form class="Filter">
  <div class="Filter-controls">
    <div class="Filter-fieldset">
      <label for="keyword-search-input">
        {{ filter.keyword.label }}
        {{> @help-tip helpTip=filter.keyword.helpTip }}
      </label>

      {{> @input
        name=filter.keyword.input.name
        id=filter.keyword.input.id
        placeholder=filter.keyword.input.placeholder
      }}
    </div>

    <div class="Filter-fieldset">
      <label for="years-select">
        {{ filter.years.label }}
      </label>

      {{> @select select=filter.years.select }}
    </div>

    <div class="Filter-fieldset">
      <label for="groupings-select">
        {{ filter.groupings.label }}
        {{> @help-tip helpTip=filter.groupings.helpTip }}
      </label>

      {{> @select select=filter.groupings.select }}
    </div>

    <button class="Filter-button Button" type="submit">Search</button>
  </div>

  <a class="Filter-link" href="{{ filter.filingsLink.url }}">
    {{ filter.filingsLink.label }}
  </a>
</form>
