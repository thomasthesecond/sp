<select
  {{#if select.className}}class="{{ select.className }}"{{/if}}
  {{#if select.id}}id="{{ select.id }}"{{/if}}
  {{#if select.name}}name="{{ select.name }}"{{/if}}
  {{#if select.required}}required{{/if}}>
  {{#each select.options}}
    <option value="{{ this.value }}"{{#if this.selected }} selected="selected"{{/if}}>
      {{ this.label }}
    </option>
  {{/each}}
</select>
