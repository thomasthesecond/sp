<!doctype html>
<html class="no-js" lang="en-US">
  <head>
    <meta charset="utf-8">
    <title>{{#if _target.context.title}}{{ _target.context.title }} &middot; {{/if}}Surgery Partners</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="format-detection" content="telephone=no">

    <meta name="author" content="Surgery Partners">
		<meta name="description" content="{{ _target.context.description }}">

    <meta property="og:site_name" content="Surgery Partners">
		<meta property="og:type" content="website">
		<meta property="og:title" content="{{ _target.context.title }}">
		<meta property="og:description" content="{{ _target.context.description }}">
    {{#if _target.context.image}}
      <meta property="og:image" content="{{ path _target.context.image }}">
    {{/if}}
    {{#if _target.context.slug}}
  		<meta property="og:url" content="https://www.surgerypartners.com{{ _target.context.slug }}">
    {{/if}}
    <meta property="og:site_name" content="Surgery Partners">

    <link rel="shortcut icon" href="/assets/images/favicon.ico" type="image/x-icon" title="favicon">

    {{#if _target.context.slug}}
      <link rel="canonical" href="https://www.surgerypartners.com{{ _target.context.slug }}">
    {{/if}}

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mate|Open+Sans:300,400,600,700">
    <link rel="stylesheet" href="{{ path '/assets/main.css' }}">
    {{#if _target.context.assetFileName}}
      <link rel="stylesheet" href="{{ path '/assets/{{ _target.context.assetFileName }}.css' }}">
    {{/if}}

    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "MedicalOrganization",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "40 Burton Hills Blvd, Suite 500",
          "addressLocality": "Nashville",
          "addressRegion": "Tennessee",
          "postalCode": "37215",
          "addressCountry": "United States"
        },
        "name": "Surgery Partners",
        "telephone": "615-234-5900",
        "faxNumber": "615-234-5998",
        "url": "https://www.surgerypartners.com/",
        "logo": "",
        "description": "Surgery Partners is a leading operator of surgical facilities and ancillary services with more than 180 locations nationwide. We provide exceptional integrated healthcare experiences between our providers and patients."
      }
    </script>
  </head>

  <body{{#if _target.context.classname}} class="{{ _target.context.classname }}{{/if}}">
    {{> @skip-link }}

    {{{ yield }}}

    {{> @icon-sprite }}

    <script src="{{ path '/assets/main.js' }}"></script>
    {{#if _target.context.assetFileName}}
      <script src="{{ path '/assets/{{ _target.context.assetFileName }}.js' }}"></script>
    {{/if}}
  </body>
</html>
