{{ render "@global-header" }}

<main id="main" role="main" tabindex="0">
  {{> @masthead }}

  <div class="sticky">
    {{> @sub-navigation }}
  </div>

  <div class="container">
    {{> @introduction }}
  </div>

  <section class="section section--gradient js-spy-section" id="{{ sections.[0].id }}">
    <div class="container">
      <div class="column">
        {{> @text-block block=sections.[0] }}

        {{> @service-cards }}
      </div>
    </div>
  </section>

  <section class="section js-spy-section" id="{{ sections.[1].id }}">
    <div class="container">
      <div class="column">
        {{> @text-block block=sections.[1] }}
      </div>
    </div>

    {{> @feature--highlights }}
  </section>

  <section class="section js-spy-section" id="{{ sections.[2].id }}">
    <div class="container">
      <div class="column">
        {{> @text-block block=sections.[2] }}

        {{> @timeline }}
      </div>
    </div>
  </section>

  <section class="section section--gradient js-spy-section" id="leadership">
    <div class="container">
      <div class="column align-center">
        <h2>Leadership</h2>
      </div>

      {{> @leadership-team }}
    </div>
  </section>

  <div class="section section--border container">
    {{> @pagination }}
  </div>
</main>

{{ render "@global-footer" }}
